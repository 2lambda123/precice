<?xml version="1.0"?>

<!--
  -- Configuration for test with explicit coupling scheme and timestep length
  -- set by first participant. 
  -->
<configuration>
   <data:scalar name="data0"/>
   <data:vector name="data1"/>
   <mesh name="mesh">
      <use-data name="data0"/>
      <use-data name="data1"/>
   </mesh>
   <geometry:builtin-sphere of-mesh="mesh">
      <radius value="1.0"/>
      <discretization-width value="0.2"/>
   </geometry:builtin-sphere>
   <communication:mpi from="participant0" to="participant1"/>
   <coupling-scheme:explicit>  
      <participants first="participant0" second="participant1"/>
      <timestep-length method="first-participant"/>
      <max-time value="1.0"/> 
      <exchange data="data0" mesh="mesh" from="participant0"/>
      <exchange data="data1" mesh="mesh" from="participant1"/>
   </coupling-scheme:explicit>
</configuration>