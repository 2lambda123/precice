<?xml version="1.0"?>

<precice-configuration>

   <log-filter target="debug" component="precice" switch="off"/>
   
   <solver-interface dimensions="3" restart-mode="off" geometry-mode="off">   
      <data:vector name="DataOne"/>
      <data:scalar name="DataTwo"/>
   
      <mesh name="Mesh">
         <use-data name="DataOne"/>
         <use-data name="DataTwo"/>
      </mesh>
      
      <participant name="SolverOne">
         <use-mesh name="Mesh" provide="on"/>
         <write-data name="DataOne" mesh="Mesh"/>
         <read-data  name="DataTwo" mesh="Mesh"/>
      </participant>
      
      <participant name="SolverTwo">
         <use-mesh name="Mesh" from="SolverOne"/>
         <mapping:nearest-neighbor direction="write" mesh="Mesh"
          	      constraint="conservative" timing="initial"/>
         <mapping:nearest-neighbor direction="read" mesh="Mesh"
                  constraint="consistent" timing="initial"/>
         <write-data name="DataTwo" mesh="Mesh"/>
         <read-data  name="DataOne"     mesh="Mesh"/>
      </participant>
      
      <communication:mpi-single from="SolverOne" to="SolverTwo" />
      
      <coupling-scheme:explicit> 
         <participants first="SolverOne" second="SolverTwo"/> 
         <max-timesteps value="5"/>
         <timestep-length value="1.0"/>
         <exchange data="DataOne" mesh="Mesh" from="SolverOne"/>
         <exchange data="DataTwo" mesh="Mesh" from="SolverTwo" initialize="on"/>
      </coupling-scheme:explicit>                           
                  
   </solver-interface>

</precice-configuration>