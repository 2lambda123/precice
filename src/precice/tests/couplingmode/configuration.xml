<?xml version="1.0"?>

<precice-configuration>
   
   <log-filter target="debug" component="precice" switch="off" />
   
   <solver-interface dimensions="2">
      <data:vector name="Forces"          />
      <data:vector name="Velocities"      />
      <data:vector name="Displacements"   />
      <data:vector name="VelocityDeltas"  />
      
      <mesh name="Sphere" flip-normals="no">
         <use-data name="Forces" />
         <use-data name="Velocities" />
         <use-data name="Displacements" />
         <use-data name="VelocityDeltas" />
      </mesh>
      
      <mesh name="Boundingbox" flip-normals="yes">
      </mesh>
      
      <communication:mpi-single from="Comsol" to="Peano" />
         
      <geometry:builtin-cuboid of-mesh="Boundingbox">
         <discretization-width value="1.0" />     
         <length value="20; 20; 20" />
      </geometry:builtin-cuboid>
      
      <participant name="Peano">
         <use-mesh name="Sphere" offset="2.0; 2.0; 2.0" from="Comsol"/>
         <use-mesh name="Boundingbox" />
         <mapping:nearest-projection direction="write" mesh="Sphere" 
                  constraint="conservative" timing="incremental" />
         <mapping:nearest-projection direction="read" mesh="Sphere" 
                  constraint="consistent" timing="incremental" />
         <write-data name="Forces"         mesh="Sphere" />
         <read-data  name="Displacements"  mesh="Sphere" />
         <read-data  name="Velocities"     mesh="Sphere" />
         <read-data  name="VelocityDeltas" mesh="Sphere" />
         <action:add-to-coordinates mesh="Sphere" timing="on-exchange-post">
            <source-data name="Displacements"/>   
         </action:add-to-coordinates>
         <export:vtk timestep-interval="100" directory="output/"/>
         <export:vtk timestep-interval="100" directory=""/>   
         <watch-point name="pointa" mesh="Sphere" coordinate="1.0; 1.0" />
      </participant>
      
      <participant name="Comsol">
         <use-mesh name="Sphere" provide="yes" />
         <write-data name="Displacements"  mesh="Sphere" />
         <write-data name="Velocities"     mesh="Sphere" />
         <write-data name="VelocityDeltas" mesh="Sphere" />
         <read-data  name="Forces"         mesh="Sphere" />
         <action:divide-by-area mesh="Sphere" timing="on-exchange-post">
            <target-data name="Forces"/>   
         </action:divide-by-area>
      </participant>
      
      <coupling-scheme:explicit>
         <participants first="Peano" second="Comsol" />
         <max-time value="1.0" />
         <timestep-length value="0.1" />
         <checkpoint timestep-interval="10" />
         <exchange data="Forces"         mesh="Sphere" from="Peano"/>
         <exchange data="Velocities"     mesh="Sphere" from="Comsol"/>
         <exchange data="Displacements"  mesh="Sphere" from="Comsol"/>
         <exchange data="VelocityDeltas" mesh="Sphere" from="Comsol"/>
      </coupling-scheme:explicit>
      
   </solver-interface>
</precice-configuration>